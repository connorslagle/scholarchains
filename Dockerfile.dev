# ============================================
# Development Dockerfile
# Optimized for fast development with HMR
# ============================================
FROM node:24-alpine

# Set working directory
WORKDIR /app

# Install dependencies for node-gyp and native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install ALL dependencies
RUN npm ci

# Copy application source
# Note: Most files will be mounted as volumes in docker-compose.yml
# This ensures HMR works correctly
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Set environment to development
ENV NODE_ENV=development

# Health check for dev server
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/ || exit 1

# Start Vite development server
# Using npm run dev which includes npm install
CMD ["npm", "run", "dev"]
